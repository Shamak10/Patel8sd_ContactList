<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="Patel8sd_ContactList.DetailsPage"  
             Title="Contact Details">  

    <ScrollView>  
        <StackLayout Padding="20" Spacing="20">  
            <Image x:Name="photoImage" HeightRequest="200" HorizontalOptions="Center"/>  
            <Label x:Name="nameLabel" FontAttributes="Bold" FontSize="24"/>  
            <Label x:Name="emailLabel"/>  
            <Label x:Name="phoneLabel"/>  
            <Label x:Name="descriptionLabel"/>  
            <Button Text="Back" Clicked="OnBackClicked"/>  
        </StackLayout>  
    </ScrollView>  
</ContentPage>
